<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LLA1">
        <item name="android:background">@color/backgroundA1</item>
    </style>

    <style name="TLA1">
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">selectTeam</item>
    </style>

    <style name="teamNames">
        <item name="android:layout_width">240sp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LLchoixEquipe">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50sp</item>
    </style>

    <style name="IVchoixEquipe">
        <item name="android:layout_width">50sp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:layout_marginLeft">60sp</item>
    </style>

    <style name="buttonA1">
        <item name="android:layout_width">200sp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/buttonTextColorA1</item>
        <item name="android:background">@color/buttonBackgroundA1</item>
        <item name="android:layout_marginBottom">20sp</item>
    </style>

</resources>
